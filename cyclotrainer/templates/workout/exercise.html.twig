{% extends 'base.html.twig' %}

{% block title %}CycloTrainer{% endblock %}

{% block body %}

<header class="bg-[#4A4A45] py-4 px-8 fixed top-0 left-0 w-full z-50">
    <div class="container mx-auto flex justify-between items-center">
        <!-- Logo y Título -->
        <a href="/" class="text-white text-3xl font-bold">CycloTrainer</a>

        <!-- Menú de navegación en el header -->
        <nav class="flex items-center space-x-6">
            <ul class="hidden lg:flex space-x-6">
                <li>
                    <a href="{{ path('exercises') }}" class="text-white font-bold hover:text-yellow-400">Ejercicios</a>
                </li>
                <li>
                    <a href="{{ path('create_workout') }}" class="text-white font-bold hover:text-yellow-400">Entrenamientos</a>
                </li>
                <li>
                    <a href="{{ path('history') }}" class="text-white font-bold hover:text-yellow-400">Historial</a>
                </li>
            </ul>
        </nav>
    </div>
</header>

<main class="flex justify-center items-center min-h-screen pt-4">
    <div class="bg-white bg-opacity-80 mt-8  rounded-lg shadow-lg w-full max-w-3xl">
        <!-- Título del ejercicio -->
        <h1 class="text-center text-gray-700 text-2xl font-semibold mb-6">{{ exercise.name }}</h1>

        <!-- Detalles del ejercicio -->
        <div class="space-y-4">
            <p class="text-gray-700">
                <strong class="font-medium">Grupo Muscular:</strong> {{ exercise.muscleGroup | capitalize }}
            </p>
            <p class="text-gray-700">
                <strong class="font-medium">Descripción:</strong> {{ exercise.description }}
            </p>
            <div class="flex justify-center">
                <img src="{{ exercise.photo }}" alt="{{ exercise.name }}" class="rounded-lg shadow w-full max-w-md">
            </div>
        </div>
    </div>
</main>
{% endblock %}







