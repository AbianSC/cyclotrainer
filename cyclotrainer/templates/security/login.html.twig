{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	<div
		class="flex justify-center items-center min-h-screen pt-4">
		<!-- Contenedor con fondo blanco y algo de transparencia -->
		<div class="bg-white bg-opacity-80 p-8 rounded-lg shadow-lg w-full max-w-md">
			{% if error %}
				<div class="alert alert-danger mb-4 text-red-600">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}" class="text-blue-600 hover:text-blue-800">Logout</a>
				</div>
			{% endif %}

			<!-- Título de bienvenida -->
			<h2 class="text-center text-gray-700 text-2xl font-semibold mb-6">Bienvenido a tu espacio de entrenamiento</h2>

			<!-- Formulario de login -->
			<form method="post">
				<div class="mb-5">
					<label for="inputEmail" class="block mb-2 text-sm font-medium text-gray-700">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="reboot@example.com" autocomplete="email" required autofocus>
				</div>
				<div class="mb-5">
					<label for="inputPassword" class="block mb-2 text-sm font-medium text-gray-700">Password</label>
					<input type="password" name="password" id="inputPassword" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" autocomplete="current-password" required>
				</div>

				<!-- Enlace de olvido de contraseña -->
				<div class="mb-4 text-right">
					<a href="#" class="text-sm text-gray-600 hover:text-gray-800">¿Olvidaste tu contraseña?</a>
				</div>

				<!-- CSRF token -->
				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<!-- Botón de submit (Login) -->
				<button class="text-black bg-yellow-500 hover:bg-yellow-600 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm w-full sm:w-auto px-6 py-3 text-center" type="submit">
					Iniciar sesión
				</button>
			</form>
		</div>
	</div>
{% endblock %}






