{% extends 'base.html.twig' %}

{% block title %}CycloTrainer - Dashboard
{% endblock %}

{% block body %}
	<header class="bg-[#4A4A45] py-4 px-8 fixed top-0 left-0 w-full z-50">
		<div class="container mx-auto flex justify-between items-center">
			<!-- Logo y Título -->
			<a href="/" class="text-white text-3xl font-bold">CycloTrainer</a>

			<!-- Menú de navegación en el header -->
			<nav class="flex items-center space-x-6">
				<ul class="hidden lg:flex space-x-6">
					<li>
						<a href="{{ path('exercises') }}" class="text-white font-bold hover:text-yellow-400">Ejercicios</a>
					</li>
					<li>
						<a href="{{ path('create_workout') }}" class="text-white font-bold hover:text-yellow-400">Entrenamientos</a>
					</li>
					<li>
						<a href="{{ path('history') }}" class="text-white font-bold hover:text-yellow-400">Historial</a>
					</li>
				</ul>

				<!-- Botón de Logout -->
				<a href="{{ path('app_logout') }}" class="text-black bg-yellow-500 hover:bg-yellow-600 py-2 px-4 rounded-lg text-sm font-semibold transition duration-300 hidden lg:block">Logout</a>
			</nav>
		</div>

	</header>

	<!-- Contenido principal -->
	<main class="pt-32 min-h-screen bg-cover bg-center" style="background-image: url('{{ asset('images/pesas.png') }}');">
		<!-- Título principal con el nombre del usuario -->
		<h1 class="text-6xl text-center text-white font-bold mb-6">Bienvenido
			{{ app.user.username }}</h1>

		<!-- Workouts en cuadrícula centrada -->
		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 px-8">
			{% for workout in workouts %}
				<div class="bg-yellow-500 text-black rounded-lg shadow-lg p-8 mt-8 text-center hover:scale-105 transform transition duration-300">
					<h2 class="text-xl font-bold">{{ workout.name }}</h2>
					<a href="{{ path('app_workout_show', {id: workout.id}) }}" class="text-yellow-700 hover:text-black mt-3 inline-block">
						Ver Detalles
					</a>
					<svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="30" height="30" viewBox="0,0,256,256">
						<g fill="#000000" fill-rule="nonzero" stroke="none" stroke-width="1" stroke-linecap="butt" stroke-linejoin="miter" stroke-miterlimit="10" stroke-dasharray="" stroke-dashoffset="0" font-family="none" font-weight="none" font-size="none" text-anchor="none" style="mix-blend-mode: normal"><g transform="scale(10.66667,10.66667)"><path d="M18,2c-1.65685,0 -3,1.34315 -3,3c0.00061,0.18815 0.01892,0.37583 0.05469,0.56055l-7.11523,4.15039c-0.54194,-0.45909 -1.22919,-0.71102 -1.93945,-0.71094c-1.65685,0 -3,1.34315 -3,3c0,1.65685 1.34315,3 3,3c0.70916,-0.00139 1.3949,-0.25396 1.93555,-0.71289l7.11914,4.15234c-0.03577,0.18472 -0.05408,0.3724 -0.05469,0.56055c0,1.65685 1.34315,3 3,3c1.65685,0 3,-1.34315 3,-3c0,-1.65685 -1.34315,-3 -3,-3c-0.70983,0.00093 -1.39634,0.25353 -1.9375,0.71289l-7.11719,-4.15234c0.03577,-0.18472 0.05408,-0.3724 0.05469,-0.56055c-0.00061,-0.18815 -0.01892,-0.37583 -0.05469,-0.56055l7.11523,-4.15039c0.54194,0.45909 1.22919,0.71102 1.93945,0.71094c1.65685,0 3,-1.34315 3,-3c0,-1.65685 -1.34315,-3 -3,-3z"></path></g></g>
					</svg>
				</div>
			{% endfor %}
		</div>


	</main>
{% endblock %}






